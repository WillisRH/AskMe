<link rel="stylesheet" href="/css/profile.css" />

<img
	class="pfp"
	src="data:image/png;base64,"
	style="
		border-radius: 125px;
		display: block;
		margin: 0px auto;
		width: 100px;
		height: 100px;
	"
/>
<h2 class="mt-3" id="greeting" style="text-align: center"></h2>
<script>
	// Get the current hour (in 24-hour format)
	var hour = new Date().getHours();

	// Set the greeting based on the time of day
	var greeting;
	if (hour >= 5 && hour < 12) {
		greeting = "Selamat pagi";
	} else if (hour >= 12 && hour < 18) {
		greeting = "Selamat siang";
	} else {
		greeting = "Selamat malam";
	}

	// Display the greeting with the username
	document.getElementById("greeting").innerHTML = greeting + " <%=username %>!";
</script>
<button
	onclick="window.location.href = '/logout'"
	type="button"
	class="btn btn-danger mt-3 mb-3"
>
	<i class="fa fa-sign-out" aria-hidden="true"></i> Logout
</button>
<br />
<!-- <a href="" style="text-align: center;">Upload Image</a> -->

<h4>
	Email: <%= email %> <br />
	Username: <%= username %> <br />
	<!-- Token (debug): <%= token %>, <br> -->
	Account ID: <%= id %> <br />
	<!-- } -->
</h4>

<% if (special.includes(id.toString())) { %>
<h4 class="badge text-bg-success fs-5 mt-3">Special User</h4>
<% } %> <% if (questions.length < 3 || special.includes(id.toString())) { %>
<table class="table table-dark table-striped-columns rounded-5 mt-3">
	<thead>
		<tr>
			<th scope="col">Question ID</th>
			<th scope="col">Question Title</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		<% questions.forEach(function(question) { %>
		<tr>
			<th scope="row"><%= question.questionid %></th>
			<td><%= question.questiontitle %></td>
			<td>
				<button
					onclick="window.location.href = '/home/askme/admin/<%= question.questionid %>'"
					class="btn btn-success"
				>
					Open
				</button>
				<button
					onclick="window.location.href = '/home/askme/admin/<%= question.questionid %>/deletesession'"
					class="btn btn-danger"
				>
					Delete
				</button>
			</td>
		</tr>
		<% }); %>
	</tbody>
</table>
<button
	onclick="window.location.href = '/home/askme/admin/<%= token %>/profile/createquestions'"
	class="btn btn-primary btn-small text-decoration-none"
>
	+ Create your question session!
</button>

<% } else { %>
<table class="table table-dark table-striped-columns rounded-5 mt-3">
	<thead>
		<tr>
			<th scope="col">Question ID</th>
			<th scope="col">Question Title</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		<% questions.forEach(function(question) { %>
		<tr>
			<th scope="row"><%= question.questionid %></th>
			<td><%= question.questiontitle %></td>
			<td>
				<button
					onclick="window.location.href = '/home/askme/admin/<%= question.questionid %>/deletesession'"
					class="btn btn-danger"
				>
					Delete
				</button>
				<button
					onclick="window.location.href = '/home/askme/admin/<%= question.questionid %>'"
					class="btn btn-success"
				>
					Open
				</button>
			</td>
		</tr>
		<% }); %>
	</tbody>
</table>
<h4 class="badge text-bg-danger fs-6 text-decoration-none">
	You already have max amount of questions.
</h4>
<% } %>
